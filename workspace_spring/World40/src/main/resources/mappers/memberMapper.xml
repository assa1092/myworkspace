<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m.e.m">
<!-- namespace =>폴더 또는 페키지 역할... -->

<select id="loginpost" resultType="MemberDTO">
	<!-- 원래는 MemberDTO에 pw가 있던지. 아니면 LoginDTO를 만들던지.. -->
	select * from member where id = #{id} and name = #{pw}
</select>

<delete id="delete">
	delete from member where id = #{id} 
</delete>

<update id="update">
	update member set name = #{name}, age = #{age} where id = #{id}
</update>

<select id="updateui" resultType="MemberDTO">
	select * from member where id = #{id}
</select>

<!-- select 는 반드시 resultType 있어야 한다... -->
<select id="read" resultType="MemberDTO">
	select * from member where id = #{id}
</select>

<insert id="insert">
<!-- ; 세미콜론 넣으면 안된다...? 대신 #{} -->
	<!-- insert into member (id, name, age) values(?,?,?)  -->
	<!-- dto 객체의 getId, getName, getAge DAO에 setter/ getter 없으면 안된다 -->
	insert into member (id, name, age) values(#{id},#{name},#{age})
	
</insert>
<!-- 리스트는 정해져있으니 제네릭 타입만 정해주면 된다 resultType="MemberDTO"... -->
  <select id="list" resultType="MemberDTO">
    select * from member 
  </select>
</mapper>